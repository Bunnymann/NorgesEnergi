@model IEnumerable<API.Models.InfoViewModel>

@{
    ViewBag.Title = "List Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Administrate List</h2>

<div class="container">
    <div class="form-group">
        <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-search"></i></span>
            <input type="text" id="Search" placeholder="Search" class="form-control" />
        </div>
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "CreateHelptext")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Stage3_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stage4_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Helptext_header)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Helptext_short)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Helptext_long)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tag)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Stage3_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Stage4_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Helptext_header)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Helptext_short)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Helptext_long)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tag)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Helptext_ID }) |
                @Html.ActionLink("Delete", "DeleteInfo", new { id = item.Info_ID })
            </td>
        </tr>
    }
</table>
